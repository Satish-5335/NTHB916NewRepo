<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="com.nt.entity.BankAccount" table="NIT_OTM_BANKACCOUNT_BI">
         <id name="accno">
               <generator class="sequence">
                   <param name="sequence_name">ACCNO_SEQ</param>
                   <param name="initial_value">1000000</param>
                   <param name="increment_size">1</param>
               </generator>
         </id>
         <property name="bankName"  length="20"/>
         <property name="type"  length="20"/>
         <property name="location" length="10"/>
         <many-to-one name="person" class="com.nt.entity.Person"  column="PERSON_ID" cascade="all"  lazy="false"/>
   </class>
</hibernate-mapping>        
